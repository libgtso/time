<div class="hits">
	<div class="container">
		<div class="hits__title title">
			<h1>Хиты продаж</h1>
			<ul class="hits__type">
				<li class="active_btn hits__type_item">Все</li>
				<li class="hits__type_item">Мужские</li>
				<li class="hits__type_item">Женские</li>
				<li class="hits__type_item">Интерьерные</li>
			</ul>
		</div>
		<ul class="hits__carousel">
			{% for item in hits %}
				<li class="hits__carousel_item">
					<a class="hits__carousel_item-link" href="{{item.link}}">
						<img src="{{item.img}}" alt="{{item.alt}}">
						<div class="hits__price">
							<span class="hits__price_title">{{item.title}}</span>
							<span class="hits__price_price">{{item.price}}</span>
							<span class="button hits__price_button">{{item.buy}}</span>
						</div>
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</div>